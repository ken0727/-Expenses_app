<%= form_with model: book, local: true, method: method do |form| %>
  <div class="form-group">
    <%= form.label :年度 %>
    <%= form.text_field :year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :月 %>
    <%= form.text_field :month, class: "form-control" %>
  </div>

<div class="form-group">
  <%= form.label :区分 %>
  <%= form.select :inout, options_for_select([["収入", "1"], ["支出", "2"]], @book.inout), {}, class: "form-control" %>
</div>

  <div class="form-group">
    <%= form.label :科目 %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :金額 %>
    <%= form.text_field :amount, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= form.submit type, class: "btn btn-primary" %>
    <%= link_to 'Back', books_path, class: "btn btn-secondary" %>
  </div>

<% end %>
